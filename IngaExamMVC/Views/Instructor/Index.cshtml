@model IEnumerable<Instructor>
@{
    ViewData["Title"] = "Instructors";
}

<h2>Викладачі</h2>

<form method="get" class="mb-3">
    <input name="search"
           class="form-control"
           placeholder="Search by name or email" />
</form>

<table class="table table-bordered">
    <tr>
        <th>Ім'я</th>
        <th>Пошта</th>
        <th></th>
    </tr>

    @foreach (var i in Model)
    {
        <tr>
            <td>@i.FirstName @i.LastName</td>
            <td>@i.Email</td>
            <td>
                <a asp-action="Info" asp-route-id="@i.Id">Деталі</a> |
                <a asp-action="Edit" asp-route-id="@i.Id">Редагування</a> |
                <a asp-action="Delete" asp-route-id="@i.Id">Видалення</a>
            </td>
        </tr>
    }
</table>

<a asp-action="Create" class="btn btn-primary">Додати викладача</a>
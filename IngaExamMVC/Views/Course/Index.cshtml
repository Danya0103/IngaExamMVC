@model IEnumerable<Course>
@{
    ViewData["Title"] = "Courses";
}

<h2>Курси</h2>

<form method="get" class="mb-3">
    <input type="number" name="minStudents" placeholder="Мінімальна кількість студентів"/> 
</form>

<table class="table table-bordered">
    <tr>
        <th>Назва курсу</th>
        <th>Кількість студентів</th>
        <th></th>
    </tr>

    @foreach (var с in Model)
    {
        <tr>
            <td>@с.Title</td>
            <td>@с.Credits</td>
            <td>
                <a asp-action="Info" asp-route-id="@с.Id">Інформація</a> |
                <a asp-action="Edit" asp-route-id="@с.Id">Редагування</a> |
                <a asp-action="Delete" asp-route-id="@с.Id">Видалення</a>
            </td>
        </tr>
    }
</table>

<a asp-action="Create" class="btn btn-primary">Додвти курс</a>
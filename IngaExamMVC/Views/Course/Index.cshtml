@model IEnumerable<IngaExamMVC.ViewModels.CourseViewModel>
@{
    ViewData["Title"] = "Courses";
}

<h2>Курси</h2>

<form method="get" class="mb-3">
    <input name="search"
           class="form-control"
           placeholder="Пошук за іменем чи поштою" />
</form>

<table class="table table-bordered">
    <tr>
        <th>Назва</th>
        <th></th>
    </tr>

    @foreach (var c in Model)
    {
        <tr>
            <td>@c.CourseName</td>
            <td>
                <a asp-action="Info" asp-route-id="@c.Id">Деталі</a> |
                <a asp-action="Edit" asp-route-id="@c.Id">Редагування</a> |
                <a asp-action="Delete" asp-route-id="@c.Id">Видалення</a>
            </td>
        </tr>
    }
</table>

<a asp-action="Create" class="btn btn-primary">Додати курс</a>